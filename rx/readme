import rx.chemfiles as rxccfile

Example:
a=rxccfile.File("ben")
a.comname='ben.com'
a.default='fchk'
a.readfchk()
a.readac()
# COM file:
a.rung09()
a.rung09a2()
a.isover()
a.runformchk()
a.runantecham()

# Upon read fchk
>>> a.natoms
12
>>> a.multiplicity
1
>>> a.totalcharge
0
>>> a.xyzfile
(xyz string)
>>> a.atomtypelist
[None,'ca','ca',...]
>>> a.atomchargelist
[None,0.1177..,...]

>>> a.find33Hessian(1,3)
(3x3 hessian of atom 1 and 3)


import rx.molecules as rxmol

Example:
# molecule
a=rxmol.molecule("benzene")
self.name='benzene'
with open('ben.xyz','r') as f:
     self.readfromxyz(f)  # only addatom
self.natoms=12
#Somehow add bond and dihedrals here...
self.addangle(1,2,3)
self.adddihd(1,2,3,4)
#and MM functions..
addbondfunc(bondobj)
addanglefunc(angleobj)
adddihdfunc(dihdobj)

#Call atoms:
>>> print(a[1])
'C1'
>>> a[1]
Atom object at ..
